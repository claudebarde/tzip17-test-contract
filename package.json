{
  "name": "fa2-token-with-built-in-dex",
  "version": "1.0.0",
  "description": "A Tezos FA2 token with a built-in XTZ <-> token exchange",
  "main": "index.js",
  "scripts": {
    "watch": "nodemon --exec ligo compile contract ./contract/main.mligo main",
    "watch-test": "nodemon --exec ligo run test ./contract/test.mligo",
    "init-test": "npm run start-flextesa && npm run test",
    "test": "npm run compile-contract-to-json && tsc && jest ./test/contract.test.js",
    "update-taquito": "ncu -u --target newest --filter '/^@taquito.*$/' && npm i",
    "compile-contract-to-json": "ligo compile contract ./contract/FA1.2.mligo --michelson-format json > ./contract/contract.json",
    "start-flextesa": "docker run --rm --name ithaca-sandbox --detach -p 20000:20000 oxheadalpha/flextesa:20220321 ithacabox start"
  },
  "keywords": [
    "Tezos",
    "token",
    "DEX"
  ],
  "author": "Claude Barde",
  "license": "ISC",
  "dependencies": {
    "@taquito/signer": "^10.2.1",
    "@taquito/taquito": "^10.2.1",
    "@taquito/utils": "^10.2.1",
    "nodemon": "^2.0.12"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/rollup-plugin-json": "^3.0.3",
    "jest": "^27.2.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "typescript": "^4.4.3"
  }
}
